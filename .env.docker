# SmartEats Docker Development Environment
# This file is used when running with docker-compose

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=dev-secret-key-change-in-production
DEBUG=True

# Database Configuration
DATABASE_TYPE=mysql

# MySQL Configuration (Docker containers)
MYSQL_HOST=smarteats-db
MYSQL_PORT=3306
MYSQL_USER=smarteats
MYSQL_PASSWORD=smarteats123
MYSQL_DB=smarteats
MYSQL_ROOT_PASSWORD=rootpassword123

# MongoDB Configuration (Alternative)
MONGODB_URI=mongodb://admin:mongopassword123@smarteats-mongo:27017/smarteats?authSource=admin
MONGODB_DB=smarteats
MONGO_PASSWORD=mongopassword123

# Redis Configuration
REDIS_URL=redis://smarteats-redis:6379/0

# AI Service APIs (Add your actual keys)
HUGGING_FACE_API_KEY=hf_your_dev_token_here
OPENAI_API_KEY=sk-your-dev-openai-key

# Nutrition APIs (Add your actual keys)
NUTRITIONIX_APP_ID=your_nutritionix_app_id
NUTRITIONIX_API_KEY=your_nutritionix_api_key
SPOONACULAR_API_KEY=your_spoonacular_api_key
EDAMAM_APP_ID=your_edamam_app_id
EDAMAM_API_KEY=your_edamam_api_key

# Payment Gateway APIs (Use test keys)
STRIPE_SECRET_KEY=sk_test_your_stripe_test_key
STRIPE_PUBLIC_KEY=pk_test_your_stripe_test_key
PAYPAL_CLIENT_ID=your_paypal_sandbox_client_id
PAYPAL_CLIENT_SECRET=your_paypal_sandbox_client_secret

# Development Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5000", "http://127.0.0.1:5000"]
RATE_LIMIT_PER_MINUTE=1000
LOG_LEVEL=DEBUG
