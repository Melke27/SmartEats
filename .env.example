# SmartEats Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration (choose one: mysql, mongodb, firebase)
DATABASE_TYPE=mysql

# MySQL Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password
MYSQL_DB=smarteats

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/smarteats
MONGODB_DB=smarteats

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-private-key-here\n-----END PRIVATE KEY-----"
FIREBASE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com

# AI APIs Configuration
HUGGING_FACE_API_KEY=hf_your_hugging_face_token_here
OPENAI_API_KEY=sk-your_openai_api_key_here

# Nutrition APIs (as mentioned in documentation)
NUTRITIONIX_APP_ID=your_nutritionix_app_id
NUTRITIONIX_API_KEY=your_nutritionix_api_key
SPOONACULAR_API_KEY=your_spoonacular_api_key
EDAMAM_APP_ID=your_edamam_app_id
EDAMAM_API_KEY=your_edamam_api_key
CALORIE_NINJAS_API_KEY=your_calorie_ninjas_key

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here

# Advanced Features Configuration

# Payment Gateway Configuration (for donations)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret
PAYPAL_CLIENT_ID=your_paypal_client_id

# Voice Recognition Settings
VOICE_COMMANDS_ENABLED=true
SUPPORTED_LANGUAGES=en,am,sw,fr

# Community Features
COMMUNITY_FEATURES_ENABLED=true
GAMIFICATION_ENABLED=true
LEADERBOARD_SIZE=10

# Sustainability Tracking
SUSTAINABILITY_TRACKING=true
CARBON_TRACKING_ENABLED=true

# Wellness Features
WELLNESS_TRACKING=true
SLEEP_STRESS_MONITORING=true

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# Analytics and Reporting
ANALYTICS_ENABLED=true
DEFICIENCY_ALERTS=true
WEEKLY_REPORTS=true

# Social Impact
DONATION_TRACKING=true
SDG_IMPACT_METRICS=true
