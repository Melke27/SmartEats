# SmartEats Production Environment Configuration
# Update these values for production deployment

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-super-secret-production-key-here
DEBUG=False

# Database Configuration (Choose one)
DATABASE_TYPE=mysql

# MySQL Configuration
MYSQL_HOST=smarteats-db
MYSQL_PORT=3306
MYSQL_USER=smarteats
MYSQL_PASSWORD=your-secure-mysql-password
MYSQL_DB=smarteats

# MongoDB Configuration (Alternative)
MONGODB_URI=mongodb://admin:password@smarteats-mongo:27017/smarteats?authSource=admin
MONGODB_DB=smarteats

# Firebase Configuration (Alternative)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----"
FIREBASE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com

# AI Service APIs
HUGGING_FACE_API_KEY=hf_your_production_token_here
OPENAI_API_KEY=sk-your-production-openai-key

# Nutrition APIs
NUTRITIONIX_APP_ID=your_nutritionix_app_id
NUTRITIONIX_API_KEY=your_nutritionix_api_key
SPOONACULAR_API_KEY=your_spoonacular_api_key
EDAMAM_APP_ID=your_edamam_app_id
EDAMAM_API_KEY=your_edamam_api_key

# Payment Gateway APIs
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLIC_KEY=pk_live_your_stripe_public_key
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Redis Configuration
REDIS_URL=redis://smarteats-redis:6379/0

# Security & Performance
CORS_ORIGINS=["https://yourdomain.com", "https://www.yourdomain.com"]
RATE_LIMIT_PER_MINUTE=60
MAX_CONTENT_LENGTH=16777216  # 16MB

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/smarteats.log

# Monitoring & Analytics
SENTRY_DSN=your-sentry-dsn-for-error-tracking
GOOGLE_ANALYTICS_ID=your-ga-tracking-id

# CDN & Static Files
CDN_URL=https://cdn.yourdomain.com
STATIC_URL=/static/

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
